<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net9.0-windows</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <UseWPF>true</UseWPF>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Resources\length_width_panel_input.png" />
    <None Remove="Resources\length_width_roof_input.png" />
    <None Remove="Resources\program_icon.ico" />
    <None Remove="Resources\robot-picture-01.png" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="Resources\length_width_panel_input.png">
      <CopyToOutputDirectory>Never</CopyToOutputDirectory>
    </Resource>
    <Resource Include="Resources\length_width_roof_input.png">
      <CopyToOutputDirectory>Never</CopyToOutputDirectory>
    </Resource>
    <Resource Include="Resources\program_icon.ico" />
    <Resource Include="Resources\robot-picture-01.png">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Resource>
  </ItemGroup>

</Project>
